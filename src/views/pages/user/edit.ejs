<%- include('../../common/header'); -%>

    <!-- main-content -->
    <div class="main-content app-content">
        <!-- container -->
        <div class="main-container container-fluid">
            <!-- breadcrumb -->
            <div class="breadcrumb-header justify-content-between">
                <div class="my-auto">
                    <div class="d-flex">
                        <h4 class="content-title mb-0 my-auto">Edit User</h4><span
                            class="text-muted mt-1 tx-13 ms-2 mb-0">/
                            User</span>
                    </div>
                </div>
                <div class="d-flex my-xl-auto right-content">

                    <div class="mb-xl-0">
                        <a href="/user" class="btn btn-primary">View User</a>
                    </div>
                </div>
            </div> <!-- breadcrumb -->
            <div>
                <!-- success -->
                <% if(success !='' ){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                    <% } %>

                        <!-- errors  -->
                        <% if(danger !='' ){ %>
                            <div class="alert alert-danger" role="alert">
                                <%= danger %>
                            </div>
                            <% } %>

                                <!-- warning -->
                                <% if(info !='' ){ %>
                                    <div class="alert alert-info" role="alert">
                                        <%= info %>
                                    </div>
                                    <% } %>
            </div>
            <!--Row-->
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Edit User</h3>
                        </div>
                        <div class="card-body">
                            <form class="row g-3 needs-validation" novalidate=""
                                action="<%= `/user/update/${list.id}` %>" method="POST" enctype="multipart/form-data">
                                <div class="col-md-6">
                                    <label for="name" class="form-label">Name</label>
                                    <input type="text" name="name" value="<%= list.name %>" class="form-control"
                                        id="name" placeholder="Name" required="">
                                    <div class="invalid-feedback"> Please enter name. </div>
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="text" name="email" value="<%= list.email %>" class="form-control"
                                        id="email" placeholder="Email" required="">
                                    <div class="invalid-feedback"> Please enter email. </div>
                                </div>
                                <div class="col-md-6">
                                    <label for="role" class="form-label">Role</label>
                                    <select class="form-select border" name="role" id="role">
                                        <option selected disabled> Select Role</option>
                                        <% roles.forEach((role,key)=> { %>
                                            <% if(JSON.stringify(list.role)==JSON.stringify(role._id)){ %>
                                                <option value="<%-role._id %>" selected>
                                                    <%-role.name %>
                                                </option>
                                                <% }else { %>
                                                    <option value="<%-role._id %>">
                                                        <%-role.name %>
                                                    </option>
                                                    <% } %>
                                                        <% }) %>
                                    </select>
                                    <div class="invalid-feedback"> Please select role. </div>
                                </div>
                                <div class="col-md-6">
                                    <label for="password" class="form-label">Password</label>
                                    <input class="form-control" name="password" placeholder="Enter your password"
                                        type="password">
                                    <div class="invalid-feedback"> Please enter password. </div>
                                </div>

                                <div class="col-12">
                                    <button class="btn btn-primary" type="submit">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!--/Row-->
        </div> <!-- Container closed -->
    </div>
    <!-- /main-content -->

    <%- include('../../common/footer'); -%>