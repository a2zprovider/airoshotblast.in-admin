<%- include('../../common/header'); -%>

    <!-- main-content -->
    <div class="main-content app-content">
        <!-- container -->
        <div class="main-container container-fluid">
            <!-- breadcrumb -->
            <div class="breadcrumb-header justify-content-between">
                <div class="my-auto">
                    <div class="d-flex">
                        <h4 class="content-title mb-0 my-auto">Edit City</h4><span
                            class="text-muted mt-1 tx-13 ms-2 mb-0">/
                            City</span>
                    </div>
                </div>
                <div class="d-flex my-xl-auto right-content">

                    <div class="mb-xl-0">
                        <a href="/city" class="btn btn-primary">View City</a>
                    </div>
                </div>
            </div> <!-- breadcrumb -->
            <div>
                <!-- success -->
                <% if(success !='' ){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                    <% } %>

                        <!-- errors  -->
                        <% if(danger !='' ){ %>
                            <div class="alert alert-danger" role="alert">
                                <%= danger %>
                            </div>
                            <% } %>

                                <!-- warning -->
                                <% if(info !='' ){ %>
                                    <div class="alert alert-info" role="alert">
                                        <%= info %>
                                    </div>
                                    <% } %>
            </div>
            <!--Row-->
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Edit City</h3>
                        </div>
                        <div class="card-body">
                            <form class="row g-3 needs-validation" novalidate=""
                                action="<%= `/city/update/${list.id}` %>" method="POST" enctype="multipart/form-data">
                                <div class="col-md-12">
                                    <label for="title" class="form-label">Title</label>
                                    <input type="text" name="title" value="<%= list.title %>" class="form-control"
                                        id="title" placeholder="Title" required="">
                                    <div class="invalid-feedback"> Please enter title. </div>
                                </div>
                                <div class="col-md-6">
                                    <label for="code" class="form-label">Code</label>
                                    <input type="text" name="code" value="<%= list.code %>" class="form-control"
                                        id="code" placeholder="Code" required>
                                    <div class="invalid-feedback"> Please enter code. </div>
                                </div>

                                <div class="col-md-6">
                                    <label for="state" class="form-label">State</label>
                                    <select class="form-select border" name="state" id="state">
                                        <option selected disabled> Select state</option>
                                        <% states.forEach((state,key)=> { %>
                                            <% if(JSON.stringify(list.state)==JSON.stringify(state._id)){ %>
                                                <option value="<%-state._id %>" selected>
                                                    <%-state.title %>
                                                </option>
                                                <% }else { %>
                                                    <option value="<%-state._id %>">
                                                        <%-state.title %>
                                                    </option>
                                                    <% } %>
                                                        <% }) %>
                                    </select>
                                    <div class="invalid-feedback"> Please select state. </div>
                                </div>


                                <div class="col-12">
                                    <button class="btn btn-primary" type="submit">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!--/Row-->
        </div> <!-- Container closed -->
    </div>
    <!-- /main-content -->

    <%- include('../../common/footer'); -%>