<%- include('../../common/header'); -%>

    <!-- main-content -->
    <div class="main-content app-content">
        <!-- container -->
        <div class="main-container container-fluid">
            <!-- breadcrumb -->
            <div class="breadcrumb-header justify-content-between">
                <div class="my-auto">
                    <div class="d-flex">
                        <h4 class="content-title mb-0 my-auto">Edit Role</h4><span
                            class="text-muted mt-1 tx-13 ms-2 mb-0">/
                            Role</span>
                    </div>
                </div>
                <div class="d-flex my-xl-auto right-content">

                    <div class="mb-xl-0">
                        <a href="/role" class="btn btn-primary">View Role</a>
                    </div>
                </div>
            </div> <!-- breadcrumb -->
            <div>
                <!-- success -->
                <% if(success !='' ){ %>
                    <div class="alert alert-success" role="alert">
                        <%= success %>
                    </div>
                    <% } %>

                        <!-- errors  -->
                        <% if(danger !='' ){ %>
                            <div class="alert alert-danger" role="alert">
                                <%= danger %>
                            </div>
                            <% } %>

                                <!-- warning -->
                                <% if(info !='' ){ %>
                                    <div class="alert alert-info" role="alert">
                                        <%= info %>
                                    </div>
                                    <% } %>
            </div>
            <!--Row-->
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Edit Role</h3>
                        </div>
                        <div class="card-body">
                            <form class="row g-3 needs-validation" novalidate=""
                                action="<%= `/role/update/${list.id}` %>" method="POST" enctype="multipart/form-data">
                                <div class="col-md-12">
                                    <label for="name" class="form-label">Name</label>
                                    <input type="text" name="name" value="<%= list.name %>" class="form-control" id="name" placeholder="Name"
                                        required="">
                                    <div class="invalid-feedback"> Please enter name. </div>
                                </div>
                                <div class="col-md-12">
                                    <label for="permissions" class="form-label">Permissions</label>
                                    <select multiple="multiple" class="form-select border selectsum2"
                                        name="permissions[]" id="permissions">
                                        <% permissions.forEach((permission,key)=> { %>
                                            <option value="<%-permission._id %>" <% list.permissions.forEach((p,key)=> {
                                                %>
                                                <% if(JSON.stringify(p._id)==JSON.stringify(permission._id)){ %>
                                                    selected
                                                    <% } %>
                                                        <% }) %>
                                                            >
                                                            <%-permission.resource %> - <%-permission.action %>
                                            </option>
                                            <% }) %>
                                    </select>
                                    <div class="invalid-feedback"> Please select permissions. </div>
                                </div>


                                <div class="col-12">
                                    <button class="btn btn-primary" type="submit">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!--/Row-->
        </div> <!-- Container closed -->
    </div>
    <!-- /main-content -->

    <%- include('../../common/footer'); -%>